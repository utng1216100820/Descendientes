<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/images3"
    tools:context="mx.edu.utng.dloza.descendientes.Comentarios">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text"
        android:text="Commentaries"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_coment"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_data"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_cambiar"
        android:text="Enviar Comentario"

        />
</LinearLayout>
